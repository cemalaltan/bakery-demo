@{
    Layout = "";
    //Layout = "/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">


    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.min.js"></script>

    <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">


</head>
<body>
    <section class="vh-100" style="background-color: #f6f9ff;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                    <div class="card" style="border-radius: 1rem;">
                        <div class="row g-0">
                            <div class="col-md-6 col-lg-5 d-none d-md-block">
                                <img src="/assets/img/bakery.jpg"
                                     alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                            </div>
                            <div class="col-md-6 col-lg-7 d-flex align-items-center">
                                <div class="card-body p-4 p-lg-5 text-black">

                                    <form action="/Login/Index" method="post">

                                        <div class="d-flex align-items-center justify-content-center mb-3 pb-1">
                                            <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                            <span class="h1 fw-bold mb-0">ASLANOĞLU FIRIN</span>
                                        </div>

                                        <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Hesabınıza giriş yapın</h5>

                                        <div class="form-outline mb-4">
                                            <input type="text" id="form2Example17" name="email" class="form-control form-control-lg" / required>
                                            <label class="form-label" for="form2Example17">Kullanıcı Adı</label>
                                        </div>

                                        <div class="form-outline mb-4">
                                            <input type="password" id="form2Example27" name="password" class="form-control form-control-lg" / required>
                                            <label class="form-label" for="form2Example27">Parola</label>
                                        </div>
                            
                                        @if (!ViewData.ModelState.IsValid)
                                        {
                                            <div id="errorAlert" class="alert alert-danger alert-dismissible fade show" role="alert">
                                                <i class="bi bi-exclamation-octagon me-1"></i>
                                                Kullanıcı adı veya parola yanlış girildi!                                   
                                            </div>
                                          
                                        }
                                        
                                        <div class="pt-1 mb-4">
                                            <button class="btn btn-dark btn-lg btn-block" type="submit">Giriş</button>
                                        </div>

                                        <a class="small text-muted" href="#!">Şifrenimizi unuttunuz?</a>
                                        @* <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                            Hesabınız yok mu? <a href="#!"
                                                                 style="color: #393f81;">Buradan kaydolun</a>
                                        </p> *@
                                        <a href="#!" class="small text-muted">Kullanım Şartları</a>
                                        <a href="#!" class="small text-muted">Gizlilik Politikası</a>
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>

</html>
